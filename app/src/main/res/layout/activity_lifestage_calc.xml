    <TextView
        android:id="@+id/夢想清單_text"
        android:layout_width="95dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="夢想清單"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.712"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.749" />

    <ImageView
        android:id="@+id/夢想清單_image"
        android:layout_width="77dp"
        android:layout_height="77dp"
        app:srcCompat="@drawable/piggybank"
        app:layout_constraintBottom_toTopOf="@+id/夢想清單_text"
        app:layout_constraintStart_toStartOf="@+id/夢想清單_text"
        app:layout_constraintEnd_toEndOf="@+id/夢想清單_text"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/子女教育_text"
        android:layout_width="95dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="子女教育"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.712"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.564" />

    <ImageView
        android:id="@+id/子女教育_image"
        app:srcCompat="@drawable/presentation"
        android:layout_width="77dp"
        android:layout_height="77dp"
        app:layout_constraintBottom_toTopOf="@+id/子女教育_text"
        app:layout_constraintStart_toStartOf="@+id/子女教育_text"
        app:layout_constraintEnd_toEndOf="@+id/子女教育_text"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/幸福成家_text"
        android:layout_width="95dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="幸福成家"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.284"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.749" />

    <ImageView
        android:id="@+id/幸福成家_image"
        android:layout_width="77dp"
        android:layout_height="77dp"
        app:srcCompat="@drawable/house"
        app:layout_constraintBottom_toTopOf="@+id/幸福成家_text"
        app:layout_constraintStart_toStartOf="@+id/幸福成家_text"
        app:layout_constraintEnd_toEndOf="@+id/幸福成家_text"
        android:layout_marginBottom="0dp"/>

    <TextView
        android:id="@+id/幸福退休_text"
        android:layout_width="95dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="幸福退休"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.284"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.564" />

    <ImageView
        android:id="@+id/幸福退休_image"
        app:srcCompat="@drawable/checklist"
        android:layout_width="77dp"
        android:layout_height="77dp"
        app:layout_constraintBottom_toTopOf="@+id/幸福退休_text"
        app:layout_constraintStart_toStartOf="@+id/幸福退休_text"
        app:layout_constraintEnd_toEndOf="@+id/幸福退休_text"
        android:layout_marginStart="3dp" />

    <TextView
        android:id="@+id/理財試算機_text"
        android:layout_width="230dp"
        android:layout_height="55dp"
        android:gravity="center"
        android:text="理財試算機"
        android:textColor="@color/black"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.249" />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>