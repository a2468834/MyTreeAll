<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#def8ff"
    tools:context=".lifestage_calc">

    <ImageView
        android:id="@+id/花園_image"
        app:srcCompat="@drawable/garden"
        tools:ignore="MissingConstraints"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:scaleType="fitEnd"
        app:layout_constraintBottom_toBottomOf="parent" />

    <ImageView
        android:id="@+id/雲朵_medium_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:gravity="center"
        app:srcCompat="@drawable/cloud_computing"
        tools:ignore="MissingConstraints"
        android:layout_marginEnd="255dp"
        android:layout_marginBottom="415dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/雲朵_large_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:gravity="center"
        app:srcCompat="@drawable/cloud_computing"
        tools:ignore="MissingConstraints"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="443dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/雲朵_small_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:gravity="center"
        app:srcCompat="@drawable/cloud_computing"
        tools:ignore="MissingConstraints"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="368dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/太陽_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/sun"
        tools:ignore="MissingConstraints"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="492dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
<!--
        <ImageView
            android:id="@+id/返回鍵_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            app:srcCompat="?attr/homeAsUpIndicator"
            tools:ignore="MissingConstraints"
            android:layout_marginEnd="351dp"
            android:layout_marginBottom="542dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
