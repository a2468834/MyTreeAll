<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#011d5e"
    tools:context=".children_education_p1">

    <ImageView
        android:id="@+id/小嬰兒爬_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:srcCompat="@drawable/baby_boy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="275dp"
        android:layout_marginBottom="517dp"/>

    <View
        android:id="@+id/rectangle_large"
        android:layout_width="300dp"
        android:layout_height="900dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"
        android:layout_marginTop="85dp"
        android:background="@drawable/my_rectangle_f0f5f4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
<!--
    <ImageView
        android:id="@+id/返回鍵_image"
        android:layout_width="29dp"
        android:layout_height="29dp"
        android:layout_marginEnd="356dp"
        android:layout_marginBottom="548dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/go_back_white"
        tools:ignore="MissingConstraints" />
-->
    <TextView
        android:id="@+id/標題_text"
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:gravity="center|left"
        android:text="小寶貝\n的教育基金"
        android:lineSpacingExtra="-10dp"
        android:textColor="#f0f5f4"
        android:textSize="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="522dp"
        android:layout_marginEnd="110dp" />

    <View
        android:id="@+id/rectangle_small_1"
        android:layout_width="250dp"
        android:layout_height="45dp"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"
        android:layout_marginTop="125dp"
        android:background="@drawable/my_rectangle_d1dbd9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_1"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="說說您的小寶貝！"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/rectangle_small_1"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_small_1"
        app:layout_constraintTop_toTopOf="@+id/rectangle_small_1"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_small_1" />
<!--
    <Spinner
        android:id="@+id/spinner_1"
        android:background="@android:drawable/btn_dropdown"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        tools:ignore="MissingConstraints"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/rectangle_small_1" />
-->
    <EditText
        android:id="@+id/input_form_3"
        tools:ignore="MissingConstraints"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:digits="0123456789"
        android:maxLength="2"
        android:hint="第一位小寶貝年齡"
        android:textSize="17dp"
        android:gravity="center"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"
        android:layout_marginTop="90dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/rectangle_small_1" />

    <EditText
        android:id="@+id/input_form_4"
        tools:ignore="MissingConstraints"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:digits="0123456789"
        android:maxLength="2"
        android:hint="第二位小寶貝年齡"
        android:textSize="17dp"
        android:gravity="center"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="56dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/input_form_3" />

    <ImageView
        android:id="@+id/小嬰兒玩玩具_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/playtime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="130dp"/>

    <View
        android:id="@+id/rectangle_small_3"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginStart="180dp"
        android:layout_marginEnd="56dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/my_rectangle_ffffff"
        android:fadingEdge="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/text_3"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="下一頁→"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="13dp"
        app:layout_constraintStart_toStartOf="@+id/rectangle_small_3"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_small_3"
        app:layout_constraintTop_toTopOf="@+id/rectangle_small_3"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_small_3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>