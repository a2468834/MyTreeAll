<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/背景KOKO_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/koko_home_page"
        tools:ignore="MissingConstraints"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- android:scaleType="fitEnd" -->

    <ImageView
        android:id="@+id/小樹苗_image"
        android:layout_width="33dp"
        android:layout_height="33dp"
        app:srcCompat="@drawable/tree_rgb"
        app:layout_constraintBottom_toTopOf="@+id/小樹苗_text"
        app:layout_constraintStart_toStartOf="@+id/小樹苗_text"
        app:layout_constraintEnd_toEndOf="@+id/小樹苗_text"
        android:layout_marginBottom="1dp"/>

    <TextView
        android:id="@+id/小樹苗_text"
        android:layout_width="45dp"
        android:layout_height="12dp"
        android:gravity="center"
        android:text="小樹苗"
        android:textColor="@color/black"
        android:textSize="11dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/匯入記帳_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/billing"
        app:layout_constraintBottom_toTopOf="@+id/匯入記帳_text"
        app:layout_constraintStart_toStartOf="@+id/匯入記帳_text"
        app:layout_constraintEnd_toEndOf="@+id/匯入記帳_text"
        android:layout_marginBottom="1dp"/>

    <TextView
        android:id="@+id/匯入記帳_text"
        android:layout_width="45dp"
        android:layout_height="12dp"
        android:gravity="center"
        android:text="匯入記帳"
        android:textColor="@color/black"
        android:textSize="11dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="113dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>